{
  "workbench.colorCustomizations": {
    "editor.background": "#000000",
    "editor.foreground": "#00FF00",
    "editorCursor.foreground": "#00FF00",
    "editor.lineHighlightBackground": "#002200",
    "editor.lineHighlightBorder": "#00FF00",
    "editor.selectionBackground": "#003300",
    "editor.selectionHighlightBackground": "#001100",
    "editorGutter.background": "#000000",
    "editorGutter.foldingControlForeground": "#00FF00",
    "sideBar.background": "#000000",
    "sideBar.foreground": "#00FF00",
    "activityBar.background": "#000000",
    "activityBar.foreground": "#00FF00",
    "statusBar.background": "#002200",
    "statusBar.foreground": "#00FF00",
    "terminal.background": "#000000",
    "terminal.foreground": "#00FF00",
    "terminalCursor.foreground": "#00FF00",
    "notebook.cellBorderColor": "#00FF00",
    "notebook.cellEditorBackground": "#000000",
    "notebook.outputContainerBackgroundColor": "#000000",
    "notebook.outputContainerBorderColor": "#00FF00"
  },

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": { "foreground": "#009900", "fontStyle": "italic" }
      },
      {
        "scope": ["keyword", "keyword.control", "keyword.operator", "storage.type", "storage.modifier"],
        "settings": { "foreground": "#00FF00", "fontStyle": "bold" }
      },
      {
        "scope": ["string", "punctuation.definition.string", "string.interpolated", "string.template"],
        "settings": { "foreground": "#00CCCC" }
      },
      {
        "scope": ["constant", "constant.numeric", "constant.language", "constant.character", "constant.other"],
        "settings": { "foreground": "#FF9900" }
      },
      {
        "scope": ["entity.name.function", "support.function", "meta.function-call", "meta.method-call"],
        "settings": { "foreground": "#33FF33", "fontStyle": "bold" }
      },
      {
        "scope": ["variable", "entity.name.variable", "variable.other", "variable.language"],
        "settings": { "foreground": "#00FF00" }
      },
      {
        "scope": ["variable.parameter", "variable.parameter.function-call.python", "variable.parameter.python"],
        "settings": { "foreground": "#66FF66" }
      },
      {
        "scope": ["variable.language.special.self.python"],
        "settings": { "foreground": "#00FF00", "fontStyle": "italic underline" }
      },
      {
        "scope": ["entity.name.type", "support.type", "support.class"],
        "settings": { "foreground": "#66FFFF", "fontStyle": "italic" }
      },
      {
        "scope": ["punctuation", "punctuation.separator", "punctuation.terminator", "punctuation.definition"],
        "settings": { "foreground": "#00AA00" }
      },
      {
        "scope": ["invalid"],
        "settings": { "foreground": "#FF0000", "background": "#330000", "fontStyle": "underline" }
      },
      {
        "scope": "markup.deleted.diff",
        "settings": { "foreground": "#FF3333" }
      },
      {
        "scope": "markup.inserted.diff",
        "settings": { "foreground": "#33FF33" }
      },
      {
        "scope": ["keyword.other.DML.sql", "keyword.other.DDL.sql"],
        "settings": { "foreground": "#66FF66", "fontStyle": "bold" }
      },
      {
        "scope": ["constant.numeric.sql", "string.quoted.other.sql"],
        "settings": { "foreground": "#00CCCC" }
      },
      {
        "scope": ["support.function.vba", "entity.name.function.vba"],
        "settings": { "foreground": "#CCFF66" }
      },
      {
        "scope": ["keyword.control.import.c", "meta.preprocessor"],
        "settings": { "foreground": "#8888FF", "fontStyle": "bold" }
      },
      {
        "scope": ["keyword.mnemonic", "support.function.assembly"],
        "settings": { "foreground": "#FF00FF", "fontStyle": "bold" }
      },
      {
        "scope": ["variable.language.register"],
        "settings": { "foreground": "#FF6666", "fontStyle": "italic" }
      }
    ]
  },

  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.fontFamily": "monospace",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.4,
  "editor.letterSpacing": 0.4,
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "solid",
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": true,
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": true,
  "editor.smoothScrolling": false,
  "editor.parameterHints.enabled": true,
  "editor.suggest.preview": false,
  "editor.fontLigatures": false,
  "editor.formatOnType": false,
  "editor.formatOnPaste": false,
  "editor.rulers": [80],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.codeLens": true,
  "editor.semanticHighlighting.enabled": false,
  "editor.unicodeHighlight.ambiguousCharacters": true,
  "editor.unicodeHighlight.nonBasicASCII": false,

  "debug.showVariableTypes": true,
  "debug.inlineValues": false,

  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "right"
  },
  "notebook.consolidatedOutputButton": true,
  "notebook.showCellStatusBar": true,

  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "[powershell]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "[sql]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[vb]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  }
}
