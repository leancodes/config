{
  "workbench.colorCustomizations": {
    "editor.background": "#000000",
    "editor.foreground": "#C0CAF5",
    "editorCursor.foreground": "#00FF00",
    "editor.lineHighlightBackground": "#1a1b26",
    "editor.lineHighlightBorder": "#414868",
    "editor.selectionBackground": "#223355",
    "editor.selectionHighlightBackground": "#1a1b26",
    "editorGutter.background": "#000000",
    "editorGutter.foldingControlForeground": "#7AA2F7",
    "sideBar.background": "#000000",
    "sideBar.foreground": "#C0CAF5",
    "activityBar.background": "#000000",
    "activityBar.foreground": "#7AA2F7",
    "statusBar.background": "#1a1b26",
    "statusBar.foreground": "#9ECE6A",
    "terminal.background": "#000000",
    "terminal.foreground": "#C0CAF5",
    "terminalCursor.foreground": "#00FF00",
    "notebook.cellBorderColor": "#7DCFFF",
    "notebook.cellEditorBackground": "#000000",
    "notebook.outputContainerBackgroundColor": "#000000",
    "notebook.outputContainerBorderColor": "#7AA2F7",
    "editorInlayHint.foreground": "#88AAAA",
    "editorInlayHint.background": "#111111",
    "editorBracketHighlight.foreground1": "#7AA2F7",
    "editorBracketHighlight.foreground2": "#9ECE6A",
    "editorBracketHighlight.foreground3": "#FF9E64",
    "editorBracketHighlight.foreground4": "#BB9AF7",
    "editorBracketHighlight.foreground5": "#73DACA",
    "editorBracketHighlight.foreground6": "#E0AF68"
  },

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": {
          "foreground": "#55FF88",
          "background": "#003300",  
          "fontStyle": "italic"
        }
      },
      {
        "scope": ["comment.todo", "comment.keyword", "comment.line.todo"],
        "settings": {
        "foreground": "#FFAA00",
        "fontStyle": "bold"
        }
      },
      {
        "scope": ["keyword", "keyword.control", "keyword.operator", "storage.type", "storage.modifier"],
        "settings": {
          "foreground": "#BB9AF7",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["string", "string.interpolated", "string.template"],
        "settings": {
          "foreground": "#9ECE6A"
        }
      },
      {
        "scope": ["constant", "constant.numeric", "constant.language", "constant.character"],
        "settings": {
          "foreground": "#FF9E64"
        }
      },
      {
        "scope": ["entity.name.function", "meta.function-call", "meta.method-call"],
        "settings": {
          "foreground": "#7AA2F7",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["variable.parameter", "meta.function.parameters"],
        "settings": {
          "foreground": "#E0AF68"
        }
      },
      {
        "scope": ["variable", "entity.name.variable", "variable.other", "variable.language"],
        "settings": {
          "foreground": "#C0CAF5" 
        }
      },
      {
        "scope": ["support.type", "entity.name.type", "support.class"],
        "settings": {
          "foreground": "#7DCFFF",  
          "fontStyle": "italic"
        }
      },
      {
        "scope": ["meta.object-literal.key", "meta.object.member", "support.constant.property-value"],
        "settings": {
          "foreground": "#73DACA" 
        }
      },
      {
        "scope": ["string.regexp", "constant.regexp", "source.regexp", "punctuation.definition.group.regexp"],
        "settings": {
          "foreground": "#B4F9F8"  
        }
      },
      {
        "scope": ["keyword.other.import", "keyword.control.import", "keyword.other.export"],
        "settings": {
          "foreground": "#7DCFFF", 
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["invalid"],
        "settings": {
          "foreground": "#FF0000",
          "background": "#330000",
          "fontStyle": "underline"
        }
      }
    ]
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.fontSize": 14,
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "solid",
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": true,
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": "singleFile",
  "editor.smoothScrolling": false,
  "editor.parameterHints.enabled": true,
  "editor.suggest.preview": false,
  "editor.fontLigatures": false,
  "editor.formatOnType": false,
  "editor.formatOnPaste": false,
  // "editor.rulers": [80],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.codeLens": true,
  "editor.semanticHighlighting.enabled": false,
  "editor.unicodeHighlight.ambiguousCharacters": true,
  "editor.unicodeHighlight.nonBasicASCII": false,

  "debug.showVariableTypes": true,
  "debug.inlineValues": false,

  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "right"
  },
  "notebook.consolidatedOutputButton": true,
  "notebook.showCellStatusBar": true,

  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "[powershell]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "[sql]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[vb]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  }
}
