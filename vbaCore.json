{
  "mod": {
    "prefix": "mod",
    "body": [
      "'== ${1:ModuleName} ==",
      "' Purpose: ${2:Brief purpose}",
      "' Author: ${3:YourName} | Date: ${4:`date`}",
      "Option Explicit",
      ""
    ],
    "description": "Module header"
  },

  "cls": {
    "prefix": "cls",
    "body": [
      "'== ${1:ClassName} ==",
      "' Purpose: ${2:Brief purpose}",
      "' Author: ${3:YourName} | Date: ${4:`date`}",
      "Option Explicit",
      "",
      "' Private members",
      "' Dim m_var As Type"
    ],
    "description": "Class header with private section"
  },

  "sub": {
    "prefix": "sub",
    "body": [
      "Sub ${1:Name}()",
      "  On Error GoTo errh",
      "",
      "  ${2:'...}",
      "",
      "exith:",
      "  Exit Sub",
      "errh:",
      "  Debug.Print \"[\" & Err.Number & \"] \" & Err.Description",
      "  Resume exith",
      "End Sub"
    ],
    "description": "Sub with error handler"
  },

  "fn": {
    "prefix": "fn",
    "body": [
      "Function ${1:Name}(${2:arg} As ${3:Type}) As ${4:ReturnType}",
      "  On Error GoTo errh",
      "",
      "  ${5:'...}",
      "",
      "exith:",
      "  Exit Function",
      "errh:",
      "  Debug.Print \"[\" & Err.Number & \"] \" & Err.Description",
      "  Resume exith",
      "End Function"
    ],
    "description": "Function with error handler"
  },

  "prop": {
    "prefix": "prop",
    "body": [
      "Private m_${1:prop} As ${2:Type}",
      "",
      "Public Property Get ${1}() As ${2}",
      "  ${1} = m_${1}",
      "End Property",
      "",
      "Public Property Let ${1}(ByVal v As ${2})",
      "  m_${1} = v",
      "End Property"
    ],
    "description": "Property Get/Let with backing field"
  },

  "loop": {
    "prefix": "loop",
    "body": [
      "Dim ${1:i} As Long",
      "For ${1} = ${2:1} To ${3:10}",
      "  ${4:'...}",
      "Next ${1}"
    ],
    "description": "For loop"
  },

  "each": {
    "prefix": "each",
    "body": [
      "Dim ${1:el} As ${2:Variant}",
      "For Each ${1} In ${3:Collection}",
      "  ${4:'...}",
      "Next ${1}"
    ],
    "description": "For Each loop"
  },

  "if": {
    "prefix": "if",
    "body": [
      "If ${1:condition} Then",
      "  ${2:'...}",
      "Else",
      "  ${3:'...}",
      "End If"
    ],
    "description": "If/Else block"
  },

  "sel": {
    "prefix": "sel",
    "body": [
      "Select Case ${1:expr}",
      "  Case ${2:val1}",
      "    ${3:'...}",
      "  Case Else",
      "    ${4:'...}",
      "End Select"
    ],
    "description": "Select Case block"
  },

  "log": {
    "prefix": "log",
    "body": [
      "Sub log(msg As String)",
      "  Debug.Print Now & \": \" & msg",
      "End Sub"
    ],
    "description": "Simple timestamp logger"
  },

  "test": {
    "prefix": "test",
    "body": [
      "Sub test_${1:fn}()",
      "  Dim result As Variant",
      "  result = ${1}(${2:args})",
      "  Debug.Print \"Result:\", result",
      "End Sub"
    ],
    "description": "Basic test harness"
  }
}
